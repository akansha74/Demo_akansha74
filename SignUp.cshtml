@model AllFunctionalityNetCore.Models.ViewModel.SignUpUserViewModel
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container">
    <div class="row mt-lg-5">
        <div class="col-6 offset-3 border border-primary rounded  pl-5 pr-5 pb-5 mt-2">
            <div class="text-center">
                <h1 class="text-info">User Registration Form</h1>
            </div>
            <h3 class="text-danger text-center">@TempData["errormessage"]</h3>
            <form method="post"action="SignUp">
                <div class="form-group">
                    <label asp-for="UserName"></label>
                    <input type="text" asp-for="UserName" placeholder="Enter UserName" class="form-control" autocomplete="off" />
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input type="text" asp-for="Email" placeholder="Enter Email" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Mobile"></label>
                    <input type="number" asp-for="Mobile" placeholder="Enter Mobile" class="form-control" autocomplete="off" />
                    <span asp-validation-for="Mobile" class="text-danger"></span>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Password"></label>
                            <input type="password" asp-for="Password" placeholder="Enter Password" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">

                            <label asp-for="ConfirmPassword"></label>
                            <input type="password" asp-for="ConfirmPassword" placeholder="Enter ConfirmPassword" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <input type="checkbox" checked="checked" asp-for="IsActive" />
                    <label asp-for="IsActive"></label>
                </div>
                
                <div class="form-group">
                    <input type="submit"  class="btn btn-success btn-lg mb-1 float-right" value="Registration" />
                </div>

            </form>
        </div>
    </div>
</div>
